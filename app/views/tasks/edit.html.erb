<h2>Update <%= @task.title %></h2>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div>
  <%= f.submit "Update task", class: 'btn btn-primary' %> or <%= link_to "Cancel", tasks_path %>
  </div>
<% end %>
